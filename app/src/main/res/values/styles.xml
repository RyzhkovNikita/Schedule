<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TimeAndPares" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BigTimeAndPares" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Attributes" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Attributes.week">
        <item name="android:gravity">start</item>
    </style>
</resources>
